<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
          <div class="offset-md-3 col-md-6">
          <h1><%= title %></h1>
          <form class="form" method="POST">
              <div class="form group">
                  <label for="nameTextField">Book Title</label>
                  <input type="text" class="form-control"
                  id="nameTextField"
                  placeholder="Enter the Book Title"
                  name="name" required>
              </div>
  
              <div class="form group">
                  <label for="authorTextField">Author</label>
                  <input type="text" class="form-control"
                  id="authorTextField"
                  placeholder="Enter the Book's Author Name"
                  name="author" required>
              </div>
  
              <div class="form group">
                  <label for="GerneTextField">Gerne</label>
                  <input type="text" class="form-control"
                  id="GerneTextField"
                  placeholder="Enter the Gerne"
                  name="Gerne" required>
              </div>
  
  
              <div class="form group">
                  <label for="priceTextField">Price</label>
                  <input type="text" class="form-control"
                  id="priceTextField"
                  placeholder="Enter the Book's Price"
                  name="price" required>
              </div>
  
              <button class="btn btn-primary" type="submit">
                  <i class="fas fa edit"></i> submit</button>
                  <a href="/books" class="btn btn-warning">
                      <i class="fas fa-undo"></i>Cancel</a>
          </form>
      </div>
      </div>
  </div>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                  <tr class="d-flex">
                      <% if (typeof displayName == 'string' && displayName){ %>
                      <td class="text-center col-1"><%= books[count].name %></td>
                      <td class="text-center col-1"><%= books[count].author %></td>
                      <td class="text-center col-1"><%= books[count].Gerne %></td>
                      <td class="text-center col-1"><%= books[count].price %></td>
                      <td class="text-center col-2">
                      <a href="/books/edit/<%= books[count]._id %>" class="btn btn-primary btn-small">
                      <i class="fas fa-pencil-alt"></i>Edit</a>
                      </td>
                      <td class="text-center col-2">
                      <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-small">
                      <i class="fas fa-trash-alt"></i>Delete</a>
                      </td>
                  <% }else{%>
                      <td class="text-center col-1"><%= books[count].name %></td>
                      <td class="text-center col-1"><%= books[count].author %></td>
                      <td class="text-center col-1"><%= books[count].Gerne %></td>
                      <td class="text-center col-1"><%= books[count].price %></td>
                      <% } %>
                  </tr>
                      <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


