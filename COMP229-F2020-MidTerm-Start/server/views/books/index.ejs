<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>

          <% if (typeof displayName == 'string' && displayName){ %>
            <a href="/books/add" class="btn btn-primary"role="button">
         <i class="fas fa plus-circle"></i> Add a book</a>
            <% }%>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr class="d-flex">
                 <% if (typeof displayName == 'string' && displayName){ %>
                    <th class="text-center col-1"><Title></Title></th>
                    <th class="text-center col-1">Author</th>
                    <th class="text-center col-1">Published</th>
                    <th class="col-4">Gerne</th>

                    
                    <th class="text-center col-2"></th>
                    <th class="text-center col-2"></th>
                    <% }else{%>
                     <th class="text-center col-1"><Title></Title></th>
                    <th class="text-center col-1">Author</th>
                    <th class="text-center col-1">Gerne</th>
                    <th class="text-center col-1">Price</th>
                    
                    
                    <% }%>
                </tr>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                  <tr class="d-flex">
                      <% if (typeof displayName == 'string' && displayName){ %>
                      <td class="text-center col-1"><%= books[count].name %></td>
                      <td class="text-center col-1"><%= books[count].author %></td>
                      <td class="text-center col-1"><%= books[count].Gerne %></td>
                      <td class="text-center col-1"><%= books[count].price %></td>
                      <td class="text-center col-2">
                      <a href="/books/edit/<%= books[count]._id %>" class="btn btn-primary btn-small">
                      <i class="fas fa-pencil-alt"></i>Edit</a>
                      </td>
                      <td class="text-center col-2">
                      <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-small">
                      <i class="fas fa-trash-alt"></i>Delete</a>
                      </td>
                  <% }else{%>
                      <td class="text-center col-1"><%= books[count].name %></td>
                      <td class="text-center col-1"><%= books[count].author %></td>
                      <td class="text-center col-1"><%= books[count].Gerne %></td>
                      <td class="text-center col-1"><%= books[count].price %></td>
                      <% } %>
                  </tr>
                      <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


